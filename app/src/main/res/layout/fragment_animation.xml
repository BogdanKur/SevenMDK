<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:ignore="MissingConstraints"
    tools:context=".AnimationFragment">

    <ImageView
        android:id="@+id/left"
        android:layout_width="115dp"
        android:layout_height="144dp"
        android:src="@drawable/android"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"/>

    <ImageView
        android:id="@+id/right"
        android:layout_width="115dp"
        android:layout_height="144dp"
        android:src="@drawable/android"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"/>
    
    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/animated"
        android:layout_width="150dp"
        android:layout_height="220dp"
        app:lottie_rawRes="@raw/android_json"
        app:layout_constraintStart_toEndOf="@+id/left"
        app:layout_constraintEnd_toStartOf="@id/right"
        app:layout_constraintTop_toTopOf="@id/right"
        app:layout_constraintBottom_toBottomOf="@id/right"/>

    <ImageView
        android:id="@+id/song_btn"
        android:layout_width="259dp"
        android:layout_height="80dp"
        android:src="@drawable/pick_me"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>